#: import utils kivy.utils

<Img@Image>:
    allow_stretch: True
    keep_rotio: False

<Loading>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#CEBB4E')
        Rectangle:
            size: self.size
            pos: self.pos
    Img:
        size_hint: [1, .25]
        pos_hint:{'center_x':.5, 'top':1}
        source: 'imgs/title.png'
    Img:
        size_hint: [.9, .5]
        pos_hint:{'center_x':.5, 'center_y':.5}
        source: 'imgs/stickies.png'
    MDLabel:
        id: wait_txt
        dot1: '.'
        dot3: '.'
        dot2: '.'
        size_hint: [.4, .08]
        pos_hint: {'top':.1, 'center_x':.5}
        halign: 'center'
        text: 'Please Wait'+self.dot1+self.dot2+self.dot3
        bold: True
        font_size: '20sp'
