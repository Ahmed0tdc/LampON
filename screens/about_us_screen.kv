#: import utils kivy.utils

<Img@Image>:
    allow_stretch: True
    keep_rotio: False
<About>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#CEBB4E')
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: utils.get_color_from_hex('#FF9900')
        Rectangle:
            size: root.width-40, root.height*(3/4)
            pos: 20, 20
    Img:
        size_hint: [1, .25]
        pos_hint:{'center_x':.5, 'top':1}
        source: 'imgs/title.png'
    MDIconButton:
        size_hint: [.12,.08]
        pos_hint: {'x':.02, 'top':1}
        icon: 'arrow-left'
        on_release:
            app.screen_changer("to-home")
    MDLabel:
        id: txt00
        markup: True
        size_hint: [.8, .5]
        pos_hint: {'top':.7, 'center_x':.5}
        text: ''

    MDLabel:
        size_hint: [.8, .05]
        pos_hint: {'top':.10, 'center_x':.5}
        text: 'all rights reserved \N{copyright sign} 2020'
